<h1>Listing moves</h1>

<table>
  <tr>
    <th>Color</th>
    <th>From square</th>
    <th>To square</th>
    <th>Notation</th>
    <th>Puts in check</th>
    <th>Checkmates</th>
    <th>Ip</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @moves.each do |move| %>
  <tr>
    <td><%= move.color %></td>
    <td><%= move.from_square %></td>
    <td><%= move.to_square %></td>
    <td><%= move.notation %></td>
    <td><%= move.puts_in_check %></td>
    <td><%= move.checkmates %></td>
    <td><%= move.ip %></td>
    <td><%= link_to 'Show', move %></td>
    <td><%= link_to 'Edit', edit_move_path(move) %></td>
    <td><%= link_to 'Destroy', move, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

